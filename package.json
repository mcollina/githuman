{
  "name": "local-code-reviewer",
  "version": "0.1.0",
  "description": "Local CLI tool for code review with web interface",
  "type": "module",
  "bin": {
    "code-review": "./src/cli/index.ts"
  },
  "scripts": {
    "dev:server": "node --watch src/cli/index.ts serve",
    "start": "node src/cli/index.ts serve",
    "test": "npm run test:server && npm run test:cli",
    "test:server": "node --test 'tests/server/**/*.test.ts'",
    "test:cli": "node --test 'tests/cli/**/*.test.ts'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "code-review",
    "git",
    "cli",
    "diff"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/static": "^8.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "diff": "^5.2.0",
    "diff2html": "^3.4.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "open": "^10.0.0",
    "shiki": "^1.0.0",
    "simple-git": "^3.25.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.0"
  }
}
