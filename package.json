{
  "name": "githuman",
  "version": "0.6.0",
  "description": "Review AI agent code changes before commit",
  "type": "module",
  "bin": {
    "githuman": "./dist/cli/index.js"
  },
  "files": [
    "dist/",
    "skills/",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "dev:server": "node --watch-path=src src/cli/index.ts serve --no-open",
    "clean": "rm -rf dist",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc -p tsconfig.build.json && node -e \"if (process.platform !== 'win32') { try { require('child_process').execSync('chmod +x dist/cli/index.js') } catch (e) { console.error('Failed to chmod:', e.message) } }\"",
    "build:web": "vite build",
    "start": "node dist/cli/index.js serve",
    "test": "npm run test:server && npm run test:cli && npm run test:web",
    "test:server": "node --test 'tests/server/**/*.test.ts'",
    "test:cli": "node --test 'tests/cli/**/*.test.ts'",
    "test:web": "vitest run",
    "test:e2e": "playwright test",
    "typecheck": "npm run typecheck:server && npm run typecheck:web",
    "typecheck:server": "tsc --noEmit",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "lint": "eslint --cache src tests",
    "lint:fix": "eslint --cache src tests --fix",
    "prepublishOnly": "npm run build && npm run typecheck && npm test"
  },
  "pre-commit": [
    "typecheck",
    "lint"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "code-review",
    "git",
    "cli",
    "diff",
    "ai",
    "agent",
    "staging"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcollina/githuman.git"
  },
  "bugs": {
    "url": "https://github.com/mcollina/githuman/issues"
  },
  "homepage": "https://github.com/mcollina/githuman#readme",
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/request-context": "^6.2.1",
    "@fastify/sse": "^0.4.0",
    "@fastify/static": "^8.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "@fastify/type-provider-typebox": "^6.1.0",
    "chokidar": "^5.0.0",
    "close-with-grace": "^2.4.0",
    "clsx": "^2.1.1",
    "diff": "^5.2.0",
    "diff2html": "^3.4.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "ignore": "^7.0.5",
    "mqemitter": "^7.1.0",
    "open": "^10.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.11.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "selfsigned": "^5.5.0",
    "semver": "^7.7.3",
    "shiki": "^1.0.0",
    "simple-git": "^3.25.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@fastify/pre-commit": "^2.2.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/diff": "^5.2.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/selfsigned": "^2.0.4",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "neostandard": "^0.12.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
